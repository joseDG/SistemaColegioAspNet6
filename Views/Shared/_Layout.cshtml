                    <span class="icon-bar"></span>
                </button>
                @{
                    int nelementos = Variable.acciones.Count();
                    for (int i = 0; i < nelementos; i++)
                    {
                        @Html.ActionLink(Variable.mensaje[i], Variable.acciones[i], Variable.controladores[i], new { area = "" }, new { @class = "navbar-brand" })
