
@{
    ViewBag.Title = "Index";
}
<link href="~/Content/datatables.css" rel="stylesheet" />
<link href="~/Content/cssPropio.css" rel="stylesheet" />
<link href="~/Content/jquery-ui.min.css" rel="stylesheet" />

<h2>Alumno</h2>
<label>Seleccione Sexo</label>
<select id="cboSexo" >


</select>
<input type="button" id="btnBuscar"  value="Buscar " class="btn btn-success"/>
<input type="button" id="btnLimpiar" value="Limpiar " class="btn btn-primary" />
<br />
<button onclick="abrirModal(0)" type="button" class="btn btn-info btn-lg" data-toggle="modal" data-target="#myModal">Agregar</button>
<div id="tabla">

</div>

<div id="myModal" class="modal" role="dialog">
    <div class="modal-dialog">

        <!-- Modal content-->
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h4 id="lblTitulo" class="modal-title"></h4>
            </div>
            <div class="modal-body">
                <table style="width:80%;margin:auto">
                    <tr>
                        <td width="40%">Id Alumno</td>
                        <td width="60%"><input class="borrar form-control" type="text" id="txtIdAlumno" readonly /></td>
                    </tr>
                    <tr>
                        <td>Ingrese nombre </td>
                        <td><input class="borrar obligatorio  form-control"  type="text" id="txtnombre" /></td>
                    </tr>
                    <tr>
                        <td>Ingrese apellido paterno</td>
                        <td><input class="borrar obligatorio  form-control"  id="txtapPaterno" type="text" /></td>
                    </tr>
                    <tr>
                        <td>Ingrese apellido Materno</td>
                        <td><input class="borrar obligatorio  form-control"  id="txtapMaterno" type="text" /></td>
                    </tr>
                    <tr>
                        <td>Ingrese Sexo</td>
                        <td>
                        @*<select class="borrar obligatorio"  id="cboSexoPopup"></select>*@
                            <label>Masculino</label>
                            <input type="radio" id="rbMasculino" name="rbSexo" checked  />
                            <label>Femenino</label>
                            <input type="radio" id="rbFemenino" name="rbSexo" />
                         </td>
                    </tr>
                    <tr>
                        <td>Ingrese Fecha Nacimiento</td>
                        <td><input class="borrar obligatorio  form-control"  id="dtFechaNacimiento" type="text" /></td>
                    </tr>
                    <tr>
                        <td>Ingrese Telefono padre</td>
                        <td><input class="borrar obligatorio  form-control"  id="txttelefonoPadre" type="text" /></td>
                    </tr>
                    <tr>
                        <td>Ingrese Telefono Madre</td>
                        <td><input class="borrar obligatorio  form-control"  id="txttelefonoMadre" type="number" /></td>
                    </tr>
                    <tr>
                        <td>Ingrese Numero Hermanos</td>
                        <td><input class="borrar obligatorio  form-control"  id="txtnumeroHermanos" type="number" /></td>
                    </tr>

                </table>
            </div>
            <div class="modal-footer">
                <button onclick="Agregar()" id="btnAceptar" type="button" class="btn btn-success" >Aceptar</button>

                <button id="btnCancelar" type="button" class="btn btn-danger" data-dismiss="modal">Cancelar</button>
            </div>
        </div>

    </div>
</div>



<script src="~/scripts/jquery-1.10.2.min.js"></script>
<script src="~/scripts/jquery-ui.min.js"></script>
<script src="~/scripts/Alumno.js"></script>
<script src="~/scripts/datatables.min.js"></script>
